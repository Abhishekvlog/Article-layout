<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <TextView
           style="@style/text"
           android:text="FEATURED"
           android:layout_marginTop="300dp"
           android:layout_marginStart="150dp"
           />
       <TextView
           style="@style/text"
           android:text="Blue Ocean Waves Crash"
           android:textSize="45dp"
           android:textColor="@color/black"
           android:layout_marginTop="330dp"
           android:layout_marginStart="80dp"
           />
       <TextView
           style="@style/text"
           android:text="See the beautiful oceans of the Pacific coast where the water is so clean you can see the sand.  "
           android:layout_marginTop="500dp"
           android:textSize="25dp"
           android:layout_marginStart="35dp"
           android:layout_marginEnd="30dp"/>
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="270dp"
           android:src="@drawable/oliver"
           android:layout_marginTop="700dp"/>
       <TextView
           style="@style/text"
           android:text="FEATURED"
           android:layout_marginTop="1000dp"
           android:layout_marginStart="150dp"
           />
       <TextView
           style="@style/text"
           android:text="Long Exposure River Bridge"
           android:textSize="45dp"
           android:textColor="@color/black"
           android:layout_marginTop="1030dp"
           android:layout_marginStart="50dp"
           />
       <TextView
           style="@style/text"
           android:text="Long Exposure photography is when you leave the shutter open longer than usual to pic up more light. "
           android:layout_marginTop="1180dp"
           android:textSize="25dp"
           android:layout_marginStart="25dp"
           android:layout_marginEnd="30dp"/>


       <androidx.cardview.widget.CardView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="270dp"
               android:layout_marginTop="1dp"
               android:src="@drawable/christoffer"/>

       </androidx.cardview.widget.CardView>
   </RelativeLayout>

</ScrollView>